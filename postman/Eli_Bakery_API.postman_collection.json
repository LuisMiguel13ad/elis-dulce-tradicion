{
  "info": {
    "name": "Eli's Bakery API",
    "description": "Complete API collection for the cake order system",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "1.0.0"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{access_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3001",
      "type": "string"
    },
    {
      "key": "access_token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/health",
              "host": ["{{base_url}}"],
              "path": ["api", "health"]
            },
            "description": "Check API health and service status"
          }
        }
      ]
    },
    {
      "name": "Orders",
      "item": [
        {
          "name": "Get All Orders",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/v1/orders?status=pending&limit=50&offset=0",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "orders"],
              "query": [
                {
                  "key": "status",
                  "value": "pending",
                  "description": "Filter by status"
                },
                {
                  "key": "limit",
                  "value": "50",
                  "description": "Max results"
                },
                {
                  "key": "offset",
                  "value": "0",
                  "description": "Pagination offset"
                }
              ]
            },
            "description": "Get all orders with optional filtering"
          }
        },
        {
          "name": "Get Order by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/v1/orders/1",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "orders", "1"]
            }
          }
        },
        {
          "name": "Get Order by Number",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/v1/orders/number/ORD-2024-001",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "orders", "number", "ORD-2024-001"]
            }
          }
        },
        {
          "name": "Create Order",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"customer_name\": \"John Doe\",\n  \"customer_phone\": \"610-555-1234\",\n  \"customer_email\": \"customer@example.com\",\n  \"date_needed\": \"2024-12-25\",\n  \"time_needed\": \"14:00\",\n  \"cake_size\": \"medium\",\n  \"filling\": \"chocolate\",\n  \"theme\": \"birthday\",\n  \"dedication\": \"Happy Birthday!\",\n  \"delivery_option\": \"pickup\",\n  \"total_amount\": 50.00\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/orders",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "orders"]
            }
          }
        },
        {
          "name": "Update Order Status",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"confirmed\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/orders/1/status",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "orders", "1", "status"]
            }
          }
        }
      ]
    },
    {
      "name": "Payments",
      "item": [
        {
          "name": "Create Payment",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"sourceId\": \"card_token_123\",\n  \"amount\": 50.00,\n  \"orderData\": {\n    \"order_id\": 1\n  },\n  \"idempotencyKey\": \"unique_key_123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/payments/create-payment",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "payments", "create-payment"]
            }
          }
        }
      ]
    },
    {
      "name": "Products",
      "item": [
        {
          "name": "Get All Products",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/v1/products",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "products"]
            }
          }
        },
        {
          "name": "Create Product",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name_es\": \"Pastel de Chocolate\",\n  \"name_en\": \"Chocolate Cake\",\n  \"description_es\": \"Delicioso pastel\",\n  \"description_en\": \"Delicious cake\",\n  \"price\": 45.99,\n  \"category\": \"cakes\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/products",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "products"]
            }
          }
        }
      ]
    }
  ]
}
